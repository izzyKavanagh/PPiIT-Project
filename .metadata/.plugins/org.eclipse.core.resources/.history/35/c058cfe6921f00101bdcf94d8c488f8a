package Menus;

import java.util.Scanner;
import Devices.DNSServer;

public class ServerMenu {
	
	public static void configureServer(Scanner scanner) {
        System.out.println("Enter a name for the new DNS Server:");
        String serverName = scanner.nextLine();
        
        DNSServer dnsServer = new DNSServer(serverName, "mac address");
        System.out.println("DNS Server '" + serverName + "' configured successfully.");
        manageDnsRecords(scanner, dnsServer);
    }

    private void manageDnsRecords(Scanner scanner, DNSServer dnsServer) {
        while (true) {
            System.out.println("\n--- DNS Server Management ---");
            System.out.println("1. Add DNS Record");
            System.out.println("2. View All Records");
            System.out.println("3. Exit DNS Server Menu");
            System.out.print("Select an option: ");

            String option = scanner.nextLine();

            switch (option) {
                case "1":
                    addDnsRecord(scanner,dnsServer);
                    break;
                case "2":
                	dnsServer.printDnsRecords();
                    break;
                case "3":
                    System.out.println("Exiting DNS Server Menu...");
                    return;
                default:
                    System.out.println("Invalid option. Please try again.");
            }
        }
    }

    private void addDnsRecord(Scanner scanner, DNSServer dnsServer) {
        System.out.println("Enter domain name:");
        String domainName = scanner.nextLine();
        System.out.println("Enter IP address:");
        String ipAddress = scanner.nextLine();

        dnsServer.addRecord(domainName, ipAddress);
        System.out.println("Record added: " + domainName + " -> " + ipAddress);
    }
}
