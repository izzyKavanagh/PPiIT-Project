package Menus;

import java.util.Scanner;

import Devices.Computer;
import Network.Topology;

public class DeviceCreationMenu {

	public static void createDevice(Scanner scanner, Topology topology)
	{
		System.out.println("Select device type to create: ");
		System.out.println("1. Router");
		System.out.println("2. Switch");
		System.out.println("3. Server");
		System.out.println("4. PC");
		System.out.println("Enter choice: ");
		int choice = scanner.nextInt();
		
		switch(choice) 
		{
			case 1: 
				createRouter(scanner, topology);
				break;
			case 2: 
				break;
			case 3: 
				break;
			case 4: 
				break;
			default: 
				break;
		
		}
	}

	private static Device createRouter(Scanner scanner, Topology topology) {
		System.out.print("Enter the name of the PC: ");
	    String name = scanner.nextLine();
	    
	    System.out.print("Enter the MAC address of the PC: ");
	    String macAddress = scanner.nextLine();
	    
		Computer pc = new Computer(name, macAddress);
		
		System.out.println(name + " successfully created and added to network!");
		
		topology.registerDevice(pc);
		
		return pc;
	}
}
